<Configuration status="INFO">
<!--  ========== Appenders ==========  -->
<Appenders>
<!--  Console appender that writes to standard out  -->
<Console name="Console" target="SYSTEM_OUT">
<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
</Console>
</Appenders>
<!--  ========== Loggers ==========  -->
<Loggers>
<!--  Root logger routes everything (INFO and above) to the console  -->
<Root level="info">
<AppenderRef ref="Console"/>
</Root>
</Loggers>
</Configuration>